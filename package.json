{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work the Spotify Web API.",
  "main": "src/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "prepush": "npm run lint && test:coverage",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:umd": "./node_modules/.bin/webpack --output-filename spotifyWrapper.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename spotifyWrapper.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "build:watch": "npm run build:all -- --watch",
    "watch": "npm run build -- --watch",
    "server": "./node_modules/.bin/webpack-dev-server --inline --open",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "test": "./node_modules/.bin/mocha src/**/*.spec.js --bail --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha src/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "function": 90,
    "lines": 90,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "src/**/*.spec.js"
    ]
  },
  "author": "luketevl",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "node-fetch": "^1.7.3",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^2.2.0-rc.2",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "ramda": "^0.22.1"
  }
}
